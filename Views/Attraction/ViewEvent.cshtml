@model TravelGroupProject.Models.AttractionView

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">

    <a asp-action="SearchEvents" class="btn btn-secondary mb-3">Back</a>

    <div class="row">
        <div class="col-md-6">
            <h2>@Model.Attraction.EventName</h2>
            <p>@Model.Attraction.EventDate</p>
            <p><strong>Price:</strong> @Model.Attraction.TicketPrice</p>

            <form asp-action="ReserveTickets" class="mt-3">
                <input type="hidden" name="eventId" value="@Model.Attraction.EventID" />
                <input type="hidden" name="venueId" value="@Model.Venue.VenueId" />
                <div class="input-group mb-2">
                    <input type="number" name="numberOfTickets" min="1" value="1" class="form-control" />
                    <button class="btn btn-primary">Reserve Tickets</button>
                </div>
            </form>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }

            @if (TempData["NumberOfTickets"] != null)
            {
                <p>You reserved @TempData["NumberOfTickets"] ticket(s)!</p>
            }

        <div class="col-md-6">
            <img src="@Model.Venue.ImageUrl"
                 class="img-fluid rounded shadow mb-3"
                 alt="@Model.Venue.VenueName" />
        </div>
    </div>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@{
    ViewData["Title"] = "Popular tourist spots";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    @if (ViewBag.NoData != null && (bool)ViewBag.NoData)
    {
        <div class="alert alert-info text-center">No flight booking data available.</div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-center">
                <img src="@Url.Action("GetChart")" alt="Flight Booking Chart" class="img-fluid" />
            </div>
        </div>
    }
</div>
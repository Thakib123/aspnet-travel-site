@model TravelGroupProject.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create Account</h2>
<hr />

<form asp-controller="Account" asp-action="Register" method="POST">

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SecurityQuestion1"></label>
        <select asp-for="SecurityQuestion1" asp-items="@(new SelectList(ViewBag.SecurityQuestions))" class="form-control"></select>

        <label asp-for="SecurityAnswer1"></label>
        <input asp-for="SecurityAnswer1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SecurityQuestion2"></label>
        <select asp-for="SecurityQuestion2" asp-items="@(new SelectList(ViewBag.SecurityQuestions))" class="form-control"></select>

        <label asp-for="SecurityAnswer2"></label>
        <input asp-for="SecurityAnswer2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SecurityQuestion3"></label>
        <select asp-for="SecurityQuestion3" asp-items="@(new SelectList(ViewBag.SecurityQuestions))" class="form-control"></select>

        <label asp-for="SecurityAnswer3"></label>
        <input asp-for="SecurityAnswer3" class="form-control" />
    </div>

    <input type="submit" value="Register" class="btn btn-primary" />

</form>

<br />
@ViewData["Message"]

@model List<TravelGroupProject.Models.Car>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Book a Car";
    var cities = ViewBag.Cities as List<string>;
    var classes = ViewBag.Classes as List<string>;
}

<div class="container mt-5 mb-5">

    <h2 class="text-center mb-4">
        Choose a Rental Car @if(ViewData["City"] != null){ <span>in @ViewData["City"], @ViewData["State"]</span> }
    </h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center fw-bold">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Search" method="post" class="row justify-content-center mb-4">

        <input type="hidden" name="city" value="@ViewData["City"]" />
        <input type="hidden" name="state" value="@ViewData["State"]" />

        <div class="col-md-3">
            <select name="selectedCity" class="form-select">
                <option value="">-- Select City --</option>
                @foreach (var c in cities)
                {
                    <option value="@c" selected="@(c == (ViewData["City"]?.ToString()))">@c</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <select name="className" class="form-select">
                <option value="">-- Select Class --</option>
                @foreach (var cl in classes)
                {
                    <option value="@cl">@cl</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <input name="keyword" class="form-control" placeholder="Search by make or model" />
        </div>

        <div class="col-md-2">
            <button class="btn btn-primary w-100">Search</button>
        </div>

    </form>


    <div class="row">
        @if (Model.Count == 0)
        {
            <div class="text-center text-danger fw-bold">
                No cars found for the selected criteria.
            </div>
        }
        else
        {
            foreach (var car in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 text-center p-3">

                        <img src="@Url.Content("~/" + car.ImageURL.TrimStart('/'))"
                             class="card-img-top"
                             style="height:200px;object-fit:cover;" />



                        <h5 class="fw-bold text-primary mt-3">@car.CompanyName</h5>

                        <p class="text-muted">@car.Make @car.Model (@car.Year)</p>
                        <p>Class: <strong>@car.ClassName</strong></p>

                        <p class="fw-bold text-success mb-1">@car.BasePricePerDay.ToString("C") per day</p>

                        <form asp-action="AddCar" method="post">

                            <input type="hidden" name="carId" value="@car.CarID" />
                            <input type="hidden" name="companyName" value="@car.CompanyName" />
                            <input type="hidden" name="carInfo" value="@($"{car.Make} {car.Model} ({car.Year})")" />
                            <input type="hidden" name="pricePerDay" value="@car.BasePricePerDay" />

                            <div class="d-flex justify-content-center mb-3">
                                <label class="fw-bold me-2">Days:</label>
                                <select name="days" class="form-select form-select-sm w-auto">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </div>

                            <button class="btn btn-outline-primary btn-sm w-100">
                                Add Car
                            </button>
                        </form>

                    </div>
                </div>
            }
        }
    </div>

    <div class="d-flex justify-content-center gap-3 mt-4">

        <a asp-controller="BookRoom"
           asp-action="Book"
           asp-route-hotelId="@ViewData["HotelID"]"
           asp-route-hotelName="@ViewData["HotelName"]"
           class="btn btn-secondary px-4 opacity-75 text-white">
            Back to Book Room
        </a>

        <a asp-controller="Flight"
           asp-action="SearchFlights"
           asp-route-city="@ViewData["City"]"
           asp-route-state="@ViewData["State"]"
           class="btn btn-outline-primary px-4">
             Add Flights
        </a>

    </div>

</div>

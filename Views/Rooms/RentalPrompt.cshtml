@{
    ViewData["Title"] = "Choose Option";
}

<div class="container mt-5 text-center">
    <h2>Want a rental instead?</h2>
    <p class="mt-3">We offer short-term rental options similar to Airbnb!</p>

    <div class="mt-4">
        <a class="btn btn-success btn-lg mx-2"
           asp-controller="Zillow"
           asp-action="Search">
            Yes, show rentals
        </a>

        <a class="btn btn-secondary btn-lg mx-2"
           asp-controller="Rooms"
           asp-action="SearchRooms"
           asp-route-hotelId="@ViewData["HotelID"]"
           asp-route-hotelName="@ViewData["HotelName"]"
           asp-route-city="@ViewData["City"]"
           asp-route-state="@ViewData["State"]">
            No, view rooms
        </a>
    </div>
</div>
